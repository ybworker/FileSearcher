<Page x:Class="FileSearcher.FileFindAndCopy_Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileSearcher"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FileFindAndCopy">

    <Grid>
        <TextBox x:Name="TextBox_txtData" Margin="400,69,36,47" TextWrapping="Wrap"  Text="请在此处输入要复制内容" IsEnabled="True" AcceptsReturn="True" 
VerticalScrollBarVisibility="Visible" />

        <TextBlock x:Name="TextBlock_CopyPathDate" Margin="34,236,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" Width="66" Height="21" VerticalAlignment="Top">
            <Run Language="zh-cn" Text="复制路径:" FontSize="15"/></TextBlock>
        <TextBox x:Name="TextBox_CopyPath" Margin="34,262,0,0" TextWrapping="NoWrap"  IsEnabled="True" 
Text="请在此处输入目标位置路径" VerticalAlignment="Top" Height="20" TextChanged="TextBox_CopyPath_TextChanged" HorizontalAlignment="Left" Width="302" />
        <Button x:Name="Button_CopyFile" Content="开始复制文件" HorizontalAlignment="Left" Margin="206,287,0,0" VerticalAlignment="Top" Height="36
          " Width="130" Click="Button_CopyFile_Click" FontSize="20"/>

        <TextBlock x:Name="TextBlock_FilePathDate" Margin="34,87,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" Width="66" Height="21" VerticalAlignment="Top">
            <Run Language="zh-cn" Text="文件路径:" FontSize="15"/></TextBlock>
        <TextBox x:Name="TextBox_FilePath" Margin="34,113,0,0" TextWrapping="NoWrap"  IsEnabled="True" 
Text="请在此处输入原位置路径" VerticalAlignment="Top" Height="20" TextChanged="TextBox_FilePath_TextChanged" HorizontalAlignment="Left" Width="302" />
        <Button x:Name="Button_IsPath" Content="获取文件信息" HorizontalAlignment="Left" Margin="206,138,0,0" VerticalAlignment="Top" Height="36" Width="130"
                Click="Button_IsPath_Click" FontSize="20"/>
        <CheckBox x:Name="CheckBox_Overwrite" IsThreeState="False" Content="覆盖文件" FontSize="15
                  " HorizontalAlignment="Left" Margin="247,339,0,0" VerticalAlignment="Top" Height="25" Width="89"/>
        <TextBlock x:Name="TextBlock_FindPlan" Margin="20,378,606,57" TextWrapping="Wrap"><Run Language="zh-cn" Text="aaa"/></TextBlock>



    </Grid>
</Page>
